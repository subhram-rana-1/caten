# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False
LOG_LEVEL=INFO

# Rate Limiting Configuration
ENABLE_RATE_LIMITING=True
RATE_LIMIT_REQUESTS_PER_WINDOW=10
RATE_LIMIT_WINDOW_SIZE_SECONDS=10

# File Upload Configuration
MAX_FILE_SIZE_MB=2
ALLOWED_IMAGE_TYPES=jpeg,jpg,png,heic
ALLOWED_PDF_TYPES=pdf

# LLM Configuration
GPT4_TURBO_MODEL=gpt-4-turbo-2024-04-09
GPT4O_MODEL=gpt-4o
MAX_TOKENS=2000
TEMPERATURE=0.7

# Tesseract Configuration (for OCR)
TESSERACT_CMD=/usr/bin/tesseract

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090
